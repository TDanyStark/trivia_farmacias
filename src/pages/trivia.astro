---
import Header from "@/components/Header.astro";
import Layout from "@/layouts/Layout.astro";
import { URL_BASE } from "@/config";
import FooterTrivia from "@/components/FooterTrivia.astro";
import TriviaGame from "@/components/TriviaGame.astro";
---

<Layout>
  <div
    class="min-h-screen flex flex-col bg-purple-abbott bg-cover bg-left lg:bg-center text-white "
    style={`background-image: url(${URL_BASE}/images/bg-questions.webp);`}
  >
    <Header />
    <main
      class="grid grid-cols-1 md:grid-cols-2 max-w-7xl mx-auto px-4 md:px-6 gap-4 flex-1 "
    >
      <section>
        <img
          src={`${URL_BASE}/images/womans-questions.webp`}
          alt="Mujeres Abbott"
          class="w-full h-auto"
        />
      </section>
      <section>
        <TriviaGame />
      </section>
    </main>
    <FooterTrivia />
  </div>
</Layout>
